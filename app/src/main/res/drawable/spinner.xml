<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <padding android:bottom="1dp" android:left="4dp" android:right="1dp" android:top="1dp" />

                    <gradient android:angle="270" android:endColor="#00040404" android:startColor="#00040404" />
                    <stroke android:width="3px" android:color="#b4a7a7" />
                    <corners android:radius="0dp" />
                </shape>
            </item>

            <item>

                <bitmap android:gravity="center|right" android:src="@drawable/spinner_arrow" />

            </item>

        </layer-list>

    </item>

</selector>